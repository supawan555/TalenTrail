{
  "version": 2,
  "outputDirectory": "font-end/dist",
  "builds": [
    {
      "src": "font-end/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "BackEnd/app/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "BackEnd/app/main.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "(.*)",
      "dest": "font-end/dist/$1"
    }
  ]
}
